{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phishing detection output",
  "type": "object",
  "required": ["detectionId", "modelVersion", "createdAt", "latencyMs", "message", "risk"],
  "properties": {
    "detectionId": { "type": "string" },
    "modelVersion": { "type": "string" },
    "createdAt": { "type": "string" },
    "latencyMs": { "type": "number" },
    "message": {
      "type": "object",
      "properties": {
        "messageId": { "type": "string" },
        "channel": { "type": "string" },
        "sender": { "type": ["string", "null"] },
        "receivedAt": { "type": ["string", "null"] }
      }
    },
    "risk": {
      "type": "object",
      "required": ["score", "severity", "label", "confidence"],
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "severity": { "type": "string" },
        "label": { "type": "string" },
        "confidence": { "type": "number" },
        "factors": { "type": "array" }
      }
    }
  }
}
